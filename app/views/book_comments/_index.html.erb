<%= book.book_comments.count %>件コメント
<h6 button class="btn btn-link" type="button" class="more" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">もっと見る....</h6>
  <% book.book_comments.first(2).each do |book_comment| %>
    <% unless book_comment.id.nil? %>
      <li class="comment-container">
        <div class="comment-box">
          <div class="comment-avatar">
            <%= attachment_image_tag book_comment.user, :profile_image, fallback: "no_image.jpg", class:"comment-image", size: "40x40" %>
          </div>
          <div class="comment-text">
            <p><%= link_to "@#{book_comment.user.name}", user_path(book_comment.user.id) %></p>
            <div class="comment-entry">
              <%= book_comment.comment %>
              <% if book_comment.user == current_user %>
                <%= link_to book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "comment_destroy" do %>
                  <i class="fas fa-trash" style="color: black;"></i>
                <% end %>
              <% end %>
            </div>
            <span class="comment-date pull-right">
              <%= book_comment.created_at.strftime('%Y/%m/%d') %>
            </span>
          </div>
        </div>
      </li>
    <% end %>
  <% end %>
  <div class="collapse" id="collapseExample">
    <% book.book_comments.offset(2).each do |book_comment| %>
      <% unless book_comment.id.nil? %>
        <li class="comment-container">
          <div class="comment-box">
            <div class="comment-avatar">
