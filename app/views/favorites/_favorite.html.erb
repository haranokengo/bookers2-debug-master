<% if ass.favorited_by?(current_user) %>
  <p>
    <%= link_to books_favorites_path(ass), method: :delete do %>
      ♥<%= ass.favorites.count %> いいね
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to books_favorites_path(ass), method: :post do %>
      ♡<%= ass.favorites.count %> いいね
    <% end %>
  </p>
<% end %>