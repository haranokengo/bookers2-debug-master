<% if user_signed_in? %>
    <% if book.favorited_by?(current_user) %>
        <p><i class="fas fa-heart good"></i><%=link_to book.favorites.count, book_favorites_path(book.id), method: :delete, remote: true %></p>
    <% else %>
        <p><i class="far fa-heart b"></i><%=link_to book.favorites.count, book_favorites_path(book.id), method: :post, remote: true %></p>
    <% end %>
<% else %>
    <p><span>お気に入り数: </span><%= book.favorites.count %></p>
<% end %>
